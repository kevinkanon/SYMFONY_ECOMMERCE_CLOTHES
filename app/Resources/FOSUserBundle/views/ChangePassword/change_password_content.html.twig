{# surcharge de la vue de la route profile/change-password de FOSUser afin de modifier le mot de passe#}

{% trans_default_domain 'FOSUserBundle' %}

<div class="row">

    <div class="span3">
        {% include 'UtilisateurBundle:Default:modulesUsed/utilisateurConnecte.html.twig' %}
    </div>

    <div class="span9">
        <h2>Modifier mon mot de passe</h2>
        <div id="collapseOne" class="accordion-body collapse in">
            <div class="accordion-inner">

                <div class="span4">
                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                        {{ form_widget(form) }}
                        <div>
                            <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}" />
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

